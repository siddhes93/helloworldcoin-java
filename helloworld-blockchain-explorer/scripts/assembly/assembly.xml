<assembly>
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${project.name}/conf/</outputDirectory>
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>

        <fileSet>
            <directory>src/main/resources/static</directory>
            <outputDirectory>${project.name}/front-end/static/</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>

        <fileSet>
            <directory>scripts/</directory>
            <outputDirectory>./${project.name}/</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0777</fileMode>
            <filtered>true</filtered>
        </fileSet>

        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>${project.name}/lib/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0777</fileMode>
        </fileSet>

        <fileSet>
            <directory>target</directory>
            <outputDirectory>${project.name}/</outputDirectory>
            <includes>
                <include>${project.artifactId}-*.jar</include>
            </includes>
            <fileMode>0777</fileMode>
        </fileSet>
    </fileSets>
</assembly>